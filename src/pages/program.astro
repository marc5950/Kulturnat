---
import Layout from "../layouts/Layout.astro";
import Filtrering from "../components/Filtrering.astro";
import Btn from "../components/Btn.astro";
import Card from "../components/Card.astro";
import CardsProgram from "../components/CardsProgram.astro";
---

<Layout titel="Program">
  <h1>Program</h1>
  <h2>Mere end 100 aktiviteter fordelt i kommunen</h2>

  <div class="flex filtrering">
    <Filtrering variant="pilned" size="large">Pris</Filtrering>
    <Filtrering variant="pilned" size="large">Alder</Filtrering>
    <Filtrering variant="pilned" size="large">Lokation</Filtrering>
    <Filtrering variant="pilned" size="large">Kategori</Filtrering>
    <Filtrering variant="search" size="large">Søg</Filtrering>
  </div>
  <div class="map outerpadding">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13802.585500248215!2d12.571367003583036!3d56.03437173081427!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465231112f400bb3%3A0xf3e36e3c5817f767!2s3000%20Helsing%C3%B8r!5e0!3m2!1sda!2sdk!4v1742215917594!5m2!1sda!2sdk"
      width="100%"
      height="100%"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>
  <div class="arrangorer outerpadding">
    <h2>Alle aktiviteter</h2>
    <Btn>For arrangører</Btn>
  </div>

  <CardsProgram />
  <div class="semere outerpadding">
    <div class="huskeliste">
      <button class="plus">+</button>
      <p>Se huskeliste</p>
    </div>
    <div class="knapdiv">
      <Btn>For arrangører</Btn>
    </div>
  </div>
</Layout>

<style>
  .filtrering {
    justify-content: space-between;
    padding: 2rem;
  }

  .map {
    display: grid;
    width: 100vw;
    justify-content: center;
  }
  iframe {
    width: 80vw;
    height: 40vh;
  }

  h1 {
    text-align: center;
    font-size: 5rem;
    padding-top: 7rem;
  }
  h2 {
    text-align: center;
    font-size: 3rem;
    padding-top: 1rem;
  }
  .arrangorer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
  }
  .semere {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }
  .huskeliste {
    display: flex;
    width: 260px;
    justify-content: space-between;
    align-items: center;
    p {
      font-size: 1.5rem;
    }
  }

  .plus {
    border-radius: 50%;
    color: var(--color-secondary);
    background-color: var(--color-tertiary);
    padding: 0.5rem;
    width: 50px;
    aspect-ratio: 1/1;
    border: 1px solid var(--color-tertiary);
    cursor: pointer;
    font-size: 1.5rem;
  }
  .plus:hover {
    background-color: rgba(0, 0, 0, 0);
    color: var(--color-tertiary);
    border: 1px solid var(--color-tertiary);
  }

  .knapdiv {
    display: grid;
    justify-content: center;
  }
</style>
