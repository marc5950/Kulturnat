---
import "../styles/global.css";
const { variant, size } = Astro.props;
import Pilned from "../assets/pilned.svg";
import Search from "../assets/search.svg";
---

<button class={variant + " " + size}
  ><slot />
  <img class="searchbutton" src={Search.src} alt="" />
  <img class="pilnedbutton" src={Pilned.src} alt="" /></button
>

<style>
  .large {
    display: flex;
    width: 215px;
    min-width: 215px;
    padding: 10px 20px;
    justify-content: space-between;
    align-items: center;
    border-radius: 80px;
    background: var(--Tetriary, #e82746);
    border: none;
  }

  .small {
    display: inline-flex;
    min-width: 120px;
    padding: 10px 18px;
    align-items: center;
    gap: 39px;
    border-radius: 80px;
    background: var(--Tetriary, #e82746);
    border: none;
  }
  .search {
    .pilnedbutton {
      display: none;
    }
  }

  .pilned {
    .searchbutton {
      display: none;
    }
  }

  slot {
    color: var(--Knap-hvid, #efefef);
    font-family: Fonseca;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: 0px; /* 0% */
  }
</style>
