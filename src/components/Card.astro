---
const { lokation, beskrivelse, foto, tid } = Astro.props;
import "../styles/global.css";
import Cardwave from "../assets/cardwave.svg";
import Cardwave2 from "../assets/cardwave2.svg";
---

<article class="flexcol">
  <div class="flexcol top">
    <img src={Cardwave.src} alt="#" />
    <h3>{lokation}</h3>
  </div>
  <img src={foto} alt="#" />
  <div class="bottom">
    <img src={Cardwave2.src} alt="#" />
    <p>{beskrivelse}</p>
    <h3>{tid}</h3>
    <button>+</button>
  </div>
</article>

<style>
  h2,
  h3,
  p {
    color: var(--color-secondary);
    text-align: center;
    width: 100%;
    text-wrap: wrap;
  }

  img {
    width: 300px;
    height: auto;
  }
  article {
    transition: transform 0.3s ease;
    max-width: 300px;
  }
  article:hover {
    transform: scale(1.05);
  }
  .top {
    z-index: 1;
    img {
      margin-bottom: -75px;
    }
  }
  .bottom {
    z-index: 1;
    position: relative;
    margin-top: -35px;
    img {
      margin-bottom: -80px;
    }
  }
  button {
    border-radius: 50%;
    color: var(--color-secondary);
    background-color: var(--color-tertiary);
    padding: 0.5rem;
    width: 50px;
    aspect-ratio: 1/1;
    border: 1px solid var(--color-tertiary);
    cursor: pointer;
    font-size: 1.5rem;
    position: absolute;
    bottom: -32px;
    right: 10px;
  }
  button:hover {
    background-color: rgba(0, 0, 0, 0);
    color: var(--color-tertiary);
    border: 1px solid var(--color-tertiary);
  }
</style>
