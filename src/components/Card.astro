---
const { lokation, beskrivelse, foto, tid } = Astro.props;
import "../styles/global.css";
import Cardwave from "../assets/cardwave.svg";
import Cardwave2 from "../assets/cardwave2.svg";
---

<article>
  <div class="top">
    <img src={Cardwave.src} alt="#" />
    <h2>{lokation}</h2>
  </div>
  <img src={foto} alt="#" />
  <div class="buttom"></div>
  <img src={Cardwave2.src} alt="#" />
  <p>{beskrivelse}</p>
  <h3>{tid}</h3>
  <button>knap</button>
</article>

<style>
  h2,
  h3,
  p {
    color: var(--color-secondary);
  }

  img {
    width: 300px;
    height: auto;
  }
</style>
